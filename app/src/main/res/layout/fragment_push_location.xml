<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.naddiaz.tfg.managermodule.PushLocation$PlaceholderFragment"
    android:background="@drawable/bg">



    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LocalizaciÃ³n"
            android:id="@+id/swLocation"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:textOn="Enviando"
            android:textOff="Inactiva"
            android:showText="true"
            android:splitTrack="false"
            android:singleLine="false"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/idPerson"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="ID Persona"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/idBeacon"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="ID Beacon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tiempo de espera"
            android:id="@+id/textView2"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentStart="true"
            android:layout_row="5"
            android:layout_column="0" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

    </GridLayout>
</RelativeLayout>
