<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.naddiaz.tfg.managermodule.WsParamsActivity$PlaceholderFragment"
    android:background="@drawable/bg">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtxt_day"
            android:layout_row="0"
            android:layout_column="0"
            android:hint="Day"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtxt_month"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Month"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtxt_year"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="Year (yyyy)"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/days_between"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/day_week"
            android:layout_row="4"
            android:layout_column="0"/>


        <TextView
            android:id="@+id/txt_day_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/spacing"
            android:layout_row="4"
            android:layout_column="1"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_day"
            android:id="@+id/btn_check_date"
            android:layout_row="6"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/txt_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/spacing"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>

</RelativeLayout>
